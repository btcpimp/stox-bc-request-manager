{
  "family": "dev-transactions-monitor",
  "volumes": [],
  "networkMode": "awsvpc",
  "memory": "512",
  "cpu": "256",
  "placementConstraints": [],
  "requiresCompatibilities": [
    "EC2"
  ],
  "containerDefinitions": [
    {
      "name": "dev-transactions-monitor",
      "image": "",
      "memoryReservation": 512,
      "cpu": 256,
      "essential": true,
      "portMappings": [],
      "command": [
        "npm",
        "run",
        "serve",
        "--prefix",
        "packages/transactions-monitor"
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "dev"
        },
        {
          "name": "AWS_REGION",
          "value": "eu-west-1"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "dev-request-manager",
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "transactions-monitor"
        }
      },
      "dockerLabels": {
        "SUB-SYSTEM": "request-manager",
        "Environmet": "dev",
        "SERVICE": "transaction-monitor"
      }
    }
  ]
}
