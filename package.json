{
  "name"	 : "request-manager",
  "config" : { "service" : "request-handler" },
  "scripts": {
    "lint": "eslint . --ignore-path .gitignore --cache",
    "link": "common.sh link",
    "setup": "lerna bootstrap --hoist",
    "setup:clean": "lerna clean --yes && npm run setup",
    "containers": "docker-compose -f docker/docker-compose.yml up -d",
    "test": "lerna run test",
    "test:compose": "docker-compose -f docker/docker-compose.test.yml up --abort-on-container-exit && npm run test:clean",
    "test:clean": "docker-compose -f docker/docker-compose.test.yml down"
  }
}
